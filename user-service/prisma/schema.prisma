// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
    // output   = "./generated/prisma"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

enum StatusRequest {
    PENDING
    ACCEPTED
    REJECTED

    @@map("StatusRequest")
}

model User {
    id            Int       @id @default(autoincrement())
    uuid          String    @unique
    email         String    @unique
    password      String
    username      String    @unique
    profilePic    String?
    createdAt     DateTime  @default(now())
    lastLogin     DateTime?
    matchesPlayed Int       @default(0)
    wins          Int       @default(0)
    loses         Int       @default(0)
    auth0Id       String?   @unique
    isOnline      Boolean   @default(false)

    sentRequests     Friendship[] @relation("SentRequests")
    receivedRequests Friendship[] @relation("ReceivedRequests")

    @@index([uuid, username])
}

model Friendship {
    id           Int           @id @default(autoincrement())
    uuid         String        @unique
    status       StatusRequest
    receiverUuid String
    senderUuid   String
    createdAt    DateTime      @default(now())
    updatedAt    DateTime      @updatedAt

    sender   User @relation("SentRequests", fields: [senderUuid], references: [uuid])
    receiver User @relation("ReceivedRequests", fields: [receiverUuid], references: [uuid])

    @@unique([senderUuid, receiverUuid], name: "unique_friendship")
    @@index([uuid, receiverUuid, senderUuid])
    @@map("Friendship")
}
