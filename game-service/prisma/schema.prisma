generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./game.db"
}

model Tournament {
    id              String @id @default(uuid())
    tournamentUuid  String @unique
    tournamentName  String
    player1Username String @unique
    player2Username String @unique
    player3Username String @unique
    player4Username String @unique

    @@map("game-service")
}

model History {
    id              String   @id @default(uuid())
    historyUuid     String   @unique
    tournamentName  String?
    player1Username String
    player1Points   Int
    player2Username String
    player2Points   Int
    player3Username String?
    player3Points   Int?
    player4Username String?
    player4Points   Int?
    matchedAt       DateTime @default(now())

    @@map("history")
}

model MatchMaking {
    id              String   @id @default(uuid())
    matchUuid       String   @unique
    player1Username String   @unique
    player2Username String   @unique
    matchedAt       DateTime @default(now())

    @@map("matchmaking")
}
